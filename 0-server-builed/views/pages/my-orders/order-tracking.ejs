<%- include("../../partials/header.ejs") -%>

<section class="section_gap bg-gray-100">
  <div class="justify-center flex-1 max-w-6xl py-20 mx-auto bg-white dark:bg-gray-900 rounded-2xl">
    <div class="flex flex-wrap justify-center px-20 pb-12 mb-16 text-left border-b border-gray-200 dark:border-gray-700 lg:justify-between ">
      <div class="px-4 mb-6 lg:mb-0">
        <h2 class="mb-1 text-lg font-semibold tracking-wide dark:text-gray-300">
          Track Your Order
        </h2>
        <p class="text-sm text-gray-500 dark:text-gray-400">
          Placed on:
          <span data-date="<%=order?.createdAt%>" class="text-sm font-medium text-gray-500 displayDateEle"></sp>
        </p>
        <p class="text-sm text-gray-500 dark:text-gray-400">
          Updated on:
          <span data-date="<%=order?.updatedAt%>" class="text-sm font-medium text-gray-500 displayDateEle"></sp>
        </p>
      </div>

    </div>
    <div class="flex flex-wrap items-center ">

      <% if (order?.tracking === 'payment_pending') { %>
      <%- include('./payment_pending.ejs') %>
      <% }  else if (order?.tracking === 'processing') {  %>
      <%- include('./processing.ejs') %>
      <% }  else if (order?.tracking === 'shipped') {  %>
      <%- include('./shipped.ejs') %>
      <% } else { %>
      <%- include('./delivered.ejs') %>
      <% } %>

    </div>
  </div>
</section>

<%- include("../../partials/footer.ejs") -%>