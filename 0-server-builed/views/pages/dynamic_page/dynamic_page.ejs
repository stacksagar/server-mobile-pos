<%-include("../../partials/header.ejs")-%>
<link href="https://cdn.jsdelivr.net/npm/suneditor@latest/dist/css/suneditor.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/suneditor@latest/dist/suneditor.min.js"></script>

<section class="section_gap">
  <div class="content">
    <div class="p-4 bg-white shadow rounded max-w-[100%] overflow-hidden">
      <main id="content" class="!border-none max-w-[100%]"> </main>
    </div>
  </div>
</section>

<script>
  const content = SUNEDITOR.create("content");
  const domParser = new DOMParser();

  const htmlDocument = domParser.parseFromString(
    "<%=page?.content%>",
    "text/html"
  );

  content.setContents(htmlDocument.querySelector("body").textContent);
  content.readOnly();
  content.disable();
  content.toolbar.disable();
  content.toolbar.hide();
</script>

