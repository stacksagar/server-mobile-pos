<%-include("../../partials/header.ejs")-%>


<section class="xl:py-24">
  <div class="content">
    <div class="flex-1">
      <div class="flex flex-wrap ">
        <div class="w-full py-10 bg-gray-100 xl:shadow-md xl:w-1/2 dark:bg-gray-900">
          <div class="max-w-md mx-auto">
            <div class="px-4 my-7 ">
              <div class="mb-7">

              </div>
              <h3 class="space-x-2 text-center">
                <span class="text-orange-600 text-2xl">
                  <i class="fa fa-lock"></i>
                </span>
                <span>Login your Account</span>
              </h3>
              <br>
              <br>

              <% if (error) { %>
              <p class="error_message text-red-500 font-medium mb-4"> <i class="fa-solid fa-triangle-exclamation"></i> <%= error %> </p>
              <% } %>

              <form action="/login" method="post" class="space-y-6">
                <div class="input-wrapper">
                  <div class="input-icon">
                    <i class="fa fa-envelope"> </i>
                  </div>
                  <input type="text" name="email" class="input py-4 pr-2" placeholder="Email/Phone" required>
                </div>

                <div class="input-wrapper">
                  <div class="input-icon">
                    <i class="fa-solid fa-key"></i>
                  </div>
                  <input type="password" name="password" class="input py-4 pr-10" placeholder="Your Password" data-target="password" required>
                  <button type="button" data-target="password" data-ripple-dark="dark" class="toggle-password h-full cursor-pointer text-lg absolute right-2 inset-y-0 my-auto flex items-center">
                    <i class="fa-regular fa-eye-slash"></i>
                  </button>
                </div>

                <div class="text-right">
                  <a href="#" class="text-sm font-semibold text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 hover:underline">
                    forgot password?</a>
                </div>
                <button data-ripple-dark="true" class="mt-btn w-full py-3 bg-orange-600 text-white" type="submit">LOGIN</button>

                <a href="/auth/google" class="flex select-none items-center gap-3 rounded-lg border border-blue-gray-500 py-3.5 px-7 text-center align-middle font-sans text-sm font-bold uppercase text-blue-gray-500 transition-all hover:opacity-75 focus:ring focus:ring-blue-gray-200 active:opacity-[0.85] disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none" type="button" data-ripple-dark="true">
                  <img src="/svgs/google.svg" alt="metamask" class="h-6 w-6" />
                  Continue with Google
                </a>

                <p class="text-sm text-gray-700 dark:text-gray-400 mt-4"> Need an account?
                  <a href="./register" class="text-sm font-semibold text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-500">
                    Create an account</a>
                </p>
              </form>
            </div>
          </div>
        </div>
        <div class="relative items-center justify-center hidden w-full xl:flex lg:w-1/2 ">
          <img class="absolute inset-0 z-0 object-cover w-full h-full ml-auto" src="https://i.ibb.co/M9MjP5c/03-Fruits-Vegetables.jpg">
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Footer -->
<%-include("../../partials/footer.ejs")-%>