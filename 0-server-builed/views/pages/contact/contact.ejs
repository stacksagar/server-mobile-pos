<%-include("../../partials/header")-%>

<section class="bg-zinc-100 font-poppins dark:bg-gray-800 section_gap space-y-16">
  <div class="content">
    <div class="mb-16">
      <a href="/" class="block text-2xl sm:text-3xl lg:text-4xl font-semibold">
        Contact US
      </a>
      <div class="block mt-3 sm:mt-5 text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-400">
        <a class="" href="/">Home</a>
        <span class="text-xs mx-1 sm:mx-1.5">/</span>
        <span class="underline"> contact </span>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="space-y-8 bg-white shadow p-6 border">
      <div class="px-3 py-6">
        <form action="/auth/send-message" method="post" class="py-6 rounded shadow dark:bg-gray-900 bg-gray-50">
          <div class="flex flex-wrap">
            <div class="w-full px-3 md:w-1/2 md:mb-4">
              <label for="firstname" class="block mb-3 font-bold text-gray-700 uppercase dark:text-gray-400">
                Name
              </label>
              <input type="text" name="name" placeholder="Full Name" required class="block w-full px-4 py-3 mb-3 leading-tight text-gray-700 bg-white border rounded lg:mb-0 dark:text-gray-400 dark:border-gray-800 dark:bg-gray-800" />
            </div>
            <div class="w-full px-3 md:w-1/2 md:mb-0">
              <label for="firstname" class="block mb-3 font-bold text-gray-700 uppercase dark:text-gray-400">
                Email</label>
              <input name="email" type="email" placeholder="abc@gmail.com" required class="block w-full px-4 py-3 mb-3 leading-tight text-gray-700 bg-white border rounded dark:placeholder-gray-500 dark:text-gray-400 dark:border-gray-800 dark:bg-gray-800" />
            </div>
            <div class="w-full px-3 md:mb-0">
              <label for="firstname" class="block mb-3 font-bold text-gray-700 uppercase dark:text-gray-400">
                Subject</label>
              <input name="subject" type="text" placeholder="I'm asking information for..." required class="block w-full px-4 py-3 mb-3 leading-tight text-gray-700 bg-white border rounded dark:placeholder-gray-500 dark:text-gray-400 dark:border-gray-800 dark:bg-gray-800" />
            </div>
          </div>
          <div class="px-3 mb-6">
            <label for="firstname" class="block mb-3 font-bold text-gray-700 uppercase dark:text-gray-400">
              Message</label>
            <textarea name="message" type="message" placeholder="Describe your problem" required class="block w-full p-4 leading-tight text-gray-700 bg-white rounded min-h-[100px] dark:placeholder-gray-500 dark:text-gray-400 dark:border-gray-800 dark:bg-gray-800"></textarea>
          </div>
          <div class="px-6">
            <button class="px-4 py-2 font-medium text-gray-100 bg-blue-600 rounded shadow hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-700">
              Send Message
            </button>
          </div>
        </form>
      </div>

      <div class="flex flex-wrap">
        <div class="w-full px-4 mb-20 lg:w-1/3 lg:mb-0">
          <div class="relative h-full px-6 pt-20 pb-12 text-center shadow bg-gray-50 dark:bg-gray-900">
            <div class="absolute top-0 inline-flex items-center justify-center w-14 h-14 text-blue-600 transform -translate-x-1/2 -translate-y-1/2 bg-blue-100 border border-blue-600 rounded-full dark:text-gray-400 dark:border-gray-700 dark:bg-gray-700 left-1/2">
              <i class="fa fa-envelope"></i>
            </div>
            <h2 class="mb-6 text-3xl font-bold md:text-2xl dark:text-gray-300">
              Email
            </h2>
            <a href="mailto:<%=setting?.email%>" class="text-xl text-gray-500 sm:text-2xl dark:text-gray-400"> <%=setting?.email%> </a>
          </div>
        </div>
        <div class="w-full px-4 mb-20 lg:w-1/3 lg:mb-0">
          <div class="relative h-full px-6 pt-20 pb-12 text-center shadow bg-gray-50 dark:bg-gray-900">
            <div class="absolute top-0 inline-flex items-center justify-center w-14 h-14 text-blue-600 transform -translate-x-1/2 -translate-y-1/2 bg-blue-100 border border-blue-600 rounded-full dark:text-gray-400 dark:border-gray-700 dark:bg-gray-700 left-1/2">
              <i class="fa fa-phone"></i>
            </div>
            <h2 class="mb-6 text-3xl font-bold md:text-2xl dark:text-gray-300">
              Phone
            </h2>

            <a href="tel:<%=setting?.phone%>" class="text-xl text-gray-500 sm:text-2xl dark:text-gray-400"><%=setting?.phone%></a>
          </div>
        </div>
        <div class="w-full px-4 mb-10 lg:w-1/3 lg:mb-0">
          <div class="relative h-full px-6 pt-20 pb-12 text-center shadow bg-gray-50 dark:bg-gray-900">
            <div class="absolute top-0 inline-flex items-center justify-center w-14 h-14 text-blue-600 transform -translate-x-1/2 -translate-y-1/2 bg-blue-100 border border-blue-600 rounded-full dark:text-gray-400 dark:border-gray-700 dark:bg-gray-700 left-1/2">
              <i class="fa-solid fa-location-dot"></i>
            </div>
            <h2 class="mb-6 text-3xl font-bold md:text-2xl dark:text-gray-300">
              Office
            </h2>

            <p class="text-xl text-gray-500 sm:text-2xl dark:text-gray-400">
              <%=setting?.location%>
            </p>
          </div>
        </div>
      </div>

      <div><%-setting?.map%></div>
      <div><%-setting?.messenger_chat_code%></div>
    </div>
  </div>
</section>

<%-include("../../partials/footer.ejs")-%>