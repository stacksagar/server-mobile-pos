<!-- mobile footer menus -->
<div class="flex md:hidden items-center justify-between gap-1 fixed inset-x-0 bottom-0 mx-auto w-full p-4 bg-white border-t z-[999999]">
  <a href="/" class="flex flex-col gap-1">
    <h5 class="text-center"><i class="fa fa-home"></i></h5>
    <span class="text-gray-800 font-semibold"> Home </span>
  </a>
  <a href="/categories" class="flex flex-col gap-1">
    <h5 class="text-center flex justify-center"> <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-grid-fill" viewBox="0 0 16 16">
        <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5v-3zm8 0A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5v-3zm-8 8A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5v-3zm8 0A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5v-3z" />
      </svg> </h5>
    <span class="text-gray-800 font-semibold"> Categories </span>
  </a>
  <a href="/cart" class="flex flex-col gap-1">
    <h5 class="text-center relative">
      <i class="fa fa-shopping-cart"></i>

      <small class="totalCartItems absolute bg-orange-600 text-white w-5 h-5 text-xs rounded-full -right-2 -top-2 flex items-center justify-center">
        0
      </small>
    </h5>
    <span class="text-gray-800 font-semibold"> Cart </span>
  </a> 

  <%if (user) { %>
    <a href="/my-profile" class="flex flex-col gap-1">
      <h5 class="text-center"><i class="fa fa-user"></i></h5>
      <span class="text-gray-800 font-semibold"> Account </span>
    </a>
  <% } else {%>
    <a href="/login" class="flex flex-col gap-1">
      <h5 class="text-center"><i class="fa fa-lock"></i></h5>
      <span class="text-gray-800 font-semibold"> Login </span>
    </a>
  <% } %>


</div>

<!-- Footer container -->
<footer style="background: <%=setting?.footer_bg%>; color: <%=setting?.footer_text%>;" class="text-center lg:text-left border-t">
  <div class="content">
    <div class="mx-6 py-20 text-center md:text-left">
      <div class="grid-1 grid gap-8 grid-cols-1 lg:grid-cols-9">
        <!-- TanzirAgro section -->
        <div class="max-w-[450px] mx-auto lg:mx-0 lg:max-w-full col-span-3">
          <img class="lg:max-w-[80%]" src="<%=setting?.footer_logo%>" alt="">
          <p style="color: <%=setting?.footer_text%>;" class=" xl:pr-10 mt-2"> <%=setting?.footer_description%> </p>
          <br>
          <div class="flex flex-wrap gap-2 justify-center lg:justify-start">
            <a class="circle-btn w-10 h-10 bg-[#1877f2] text-white" href="<%=setting?.facebook%>"> <i class="fab fa-facebook"></i> </a>
            <a class="circle-btn w-10 h-10 bg-[#0a66c2] text-white" href="<%=setting?.linkedin%>"> <i class="fab fa-linkedin"></i> </a>
            <a class="circle-btn w-10 h-10 bg-[#ff0000] text-white" href="<%=setting?.youtube%>"> <i class="fab fa-youtube"></i> </a>
            <a class="circle-btn w-10 h-10 bg-[#1da1f2] text-white" href="<%=setting?.twitter%>"> <i class="fab fa-twitter"></i> </a>
          </div>
        </div>
        <!-- Products section -->
        <div class="col-span-2">
          <h6 class="mb-4 flex justify-center font-semibold uppercase md:justify-start">
            Useful links
          </h6>

          <div class="flex flex-col gap-3">
            <% categories?.filter((_,i)=>i<3)?.forEach((category)=>{ %>
            <a href="/items?category=<%=category?.slug%>" class=""> <%=category?.name%> </a>
            <%})%>
          </div>




        </div>


        <div class="col-span-2">
          <h6 class="mb-4 flex justify-center font-semibold uppercase md:justify-start">
            Pages
          </h6>

          <div class="flex flex-col gap-3">
            <%pages?.filter((_,i)=>i<3)?.forEach(page=>{%>
            <a href="/pages/<%=page?.slug%>" class=""> <%=page?.name%> </a>
            <%})%>
          </div>
        </div>
        <!-- Contact section -->
        <div class="col-span-2">
          <h6 class="mb-4 flex justify-center font-semibold uppercase md:justify-start">
            Contact
          </h6>

          <div class="mb-4 flex items-center justify-center md:justify-start">
            <i class="fa fa-phone"></i>
            <a class="ml-2" href="mailto:<%=setting?.phone%>"> <%=setting?.phone%> </a>
          </div>

          <div class="mb-4 flex items-center justify-center md:justify-start">
            <i class="fa fa-envelope"></i>
            <a class="ml-2" href="mailto:<%=setting?.email%>"> <%=setting?.email%> </a>
          </div>

          <div class="mb-4 flex items-start justify-start">
            <i class="fa fa-location-dot mr-1"></i> <%=setting?.location%>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="p-6 border-t border-gray-500 border-opacity-20">
    <p class="text-center" style="color: <%=setting?.footer_text%>;"> <%=setting?.copyright%> </p>
  </div>
</footer>

